<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionbarshadow" parent="Widget.AppCompat.ActionBar">
        <item name="colorPrimary">@color/colorPrimary2</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.mytextviewstyle" parent="android:Widget.TextView">
        <item name="android:textColor">#000000</item>
        <item name="android:padding">6dp</item>
        <item name="android:background">@color/transparent</item>
    </style>


    <style name="AppTheme.googlebttstyle" parent="AppTheme">
        <item name="android:paddingLeft">6dp</item>
        <item name="android:paddingRight">6dp</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:drawablePadding">10dp</item>
    </style>
    <style name="AppTheme.mybttbasicstyle" parent="AppTheme">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginLeft">6dp</item>
        <item name="android:layout_marginRight">6dp</item>
        <item name="android:layout_marginBottom">6dp</item>
        <item name="android:padding">15dp</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:drawablePadding">10dp</item>
    </style>


    <style name="AppTheme.mybttstyle" parent="@style/AppTheme.mybttbasicstyle">
        <item name="android:background">@android:drawable/dialog_holo_light_frame</item>
    </style>


    <style name="AppTheme.headerRed" parent="@style/AppTheme.mytextviewstyle">
        <item name="android:textSize">22dp</item>

        <item name="android:background">@color/red1</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="AppTheme.header" parent="@style/AppTheme.mytextviewstyle">
        <item name="android:textSize">22dp</item>

        <item name="android:background">@color/colorPrimary2</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="AppTheme.header2" parent="@style/AppTheme.mytextviewstyle">
        <item name="android:textSize">15dp</item>

        <item name="android:background">@color/colorPrimary2</item>
        <item name="android:textColor">@android:color/white</item>
    </style>


    <style name="AppTheme.no_items_inList" parent="@style/AppTheme.mytextviewstyle">
        <item name="android:textSize">22dp</item>
    </style>


    <style name="AppTheme.showitem_down" parent="@style/AppTheme.mytextviewstyle">
        <item name="android:textSize">13dp</item>
    </style>

    <style name="AppTheme.showitem_margin" parent="@style/AppTheme.mytextviewstyle">

    </style>


    <!-- Activity with no Title -->
    <style name="ThemeOverlay.MyNoTitleActivity" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Dark Buttons -->
    <style name="ThemeOverlay.MyDarkButton" parent="ThemeOverlay.AppCompat.Dark">
        <item name="colorButtonNormal">@color/primary_dark</item>
        <item name="android:textColor">@android:color/white</item>
    </style>


</resources>
